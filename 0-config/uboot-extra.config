CONFIG_SYS_SPL_MALLOC=y 
CONFIG_HAS_CUSTOM_SPL_MALLOC_START=y
CONFIG_CUSTOM_SYS_SPL_MALLOC_ADDR=0x40000000
CONFIG_SYS_SPL_MALLOC_SIZE=0x100000
CONFIG_USB_GADGET_VENDOR_NUM=0x1fc9
CONFIG_USB_GADGET_PRODUCT_NUM=0x012b
CONFIG_USB_FUNCTION_SDP=y
CONFIG_USB_GADGET_MANUFACTURER="UBOOT_GADG_MFR"
CONFIG_SYS_BOOTM_LEN=0x10000000
CONFIG_SYS_MMC_ENV_DEV=0
CONFIG_SYS_MMC_ENV_PART=1

# Tweaks courtesy of https://github.com/niflostancu/imx-linux-builder/blob/master/configs/uboot-imx8mq.config
CONFIG_ENV_IS_IN_FAT=y
CONFIG_ENV_FAT_DEVICE_AND_PART="0"
CONFIG_ENV_IS_IN_MMC=n
CONFIG_CMD_NVEDIT_LOAD=y
CONFIG_USE_DEFAULT_ENV_FILE=y
CONFIG_DEFAULT_ENV_FILE="uboot-default.env"